<div class="overflow-auto h-screen relative">
    <%- include('components/header') %>
    <main class="container relative">
        <div class="flex flex-col h-[90vh]">
            <!-- search block -->
            <div class="pt-6 md:pt-8 lg:pt-10 mb-2">
                <%- include('search-block') %>
            </div>
            <!-- query course block -->
            <div class="grid md:grid-cols-4 gird-cols-1 gap-2 md:gap-0">
                <!-- course cards -->
                <div class="gird md:col-span-1">
                    <div class="rounded-lg shadow p-2 md:h-[700px] md:max-h-[700px] overflow-y-auto">
                        <%- include('components/course-hub/query-result-block', { courses: [], target: "" }) %>
                    </div>
                </div>
                <div class="grid md:col-span-3 md:max-h-[700px]">
                    <div class="md:ml-2 rounded-lg shadow p-2 overflow-y-auto">
                        <%- include('components/weekly-calendar/weekly-calendar', { courses: [] }) %>
                    </div>
                </div>
            </div>
        </div>
        <div id="modal-block">
            <%- include('components/weekly-calendar/specific-period-modal.ejs') %>
        </div>
    </main>
