<header class="sticky top-0 z-10 border-gray-200 shadow border-b bg-white">
    <nav x-data="{ openMenu: false }">
        <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
            <div class="relative flex justify-between h-16">
                <!-- mobile nav items -->
                <div
                    class="absolute inset-y-0 left-0 flex items-center sm:hidden"
                >
                    <button
                        type="button"
                        class="relative inline-flex items-center justify-center"
                        @click="openMenu=!openMenu"
                    >
                        <span class="absolute -inset-0.5"></span>
                        <span class="sr-only">Open main menu</span>

                        <!-- hamburger icon -->
                        <svg
                            class="h-6 w-6"
                            viewBox="0 0 15 15"
                            xmlns="http://www.w3.org/2000/svg"
                            x-show="!openMenu"
                        >
                            <path
                                d="M1.5 3C1.22386 3 1 3.22386 1 3.5C1 3.77614 1.22386 4 1.5 4H13.5C13.7761 4 14 3.77614 14 3.5C14 3.22386 13.7761 3 13.5 3H1.5ZM1 7.5C1 7.22386 1.22386 7 1.5 7H13.5C13.7761 7 14 7.22386 14 7.5C14 7.77614 13.7761 8 13.5 8H1.5C1.22386 8 1 7.77614 1 7.5ZM1 11.5C1 11.2239 1.22386 11 1.5 11H13.5C13.7761 11 14 11.2239 14 11.5C14 11.7761 13.7761 12 13.5 12H1.5C1.22386 12 1 11.7761 1 11.5Z"
                                fill="currentColor"
                                fill-rule="evenodd"
                                clip-rule="evenodd"
                            ></path>
                        </svg>

                        <svg
                            class="h-6 w-6"
                            viewBox="0 0 15 15"
                            xmlns="http://www.w3.org/2000/svg"
                            x-show="openMenu"
                        >
                            <path
                                d="M12.8536 2.85355C13.0488 2.65829 13.0488 2.34171 12.8536 2.14645C12.6583 1.95118 12.3417 1.95118 12.1464 2.14645L7.5 6.79289L2.85355 2.14645C2.65829 1.95118 2.34171 1.95118 2.14645 2.14645C1.95118 2.34171 1.95118 2.65829 2.14645 2.85355L6.79289 7.5L2.14645 12.1464C1.95118 12.3417 1.95118 12.6583 2.14645 12.8536C2.34171 13.0488 2.65829 13.0488 2.85355 12.8536L7.5 8.20711L12.1464 12.8536C12.3417 13.0488 12.6583 13.0488 12.8536 12.8536C13.0488 12.6583 13.0488 12.3417 12.8536 12.1464L8.20711 7.5L12.8536 2.85355Z"
                                fill="currentColor"
                                fill-rule="evenodd"
                                clip-rule="evenodd"
                            ></path>
                        </svg>
                    </button>
                </div>

                <!-- nav items -->
                <div
                    class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start"
                >
                    <!-- logo -->
                    <div class="flex flex-shrink-0 items-center">
                        <img
                            class="h-8 w-auto"
                            src="/icons/logo-no-background.svg"
                            alt="NTUNHS-Hub"
                        />
                    </div>

                    <div class="hidden sm:ml-6 sm:flex space-x-4">
                        <!-- Current: "text-gray-900 border-green-500", Default: "text-gray-600 border-transparent border-b-2 hover:border-green-200" -->
                        <a
                            href="#"
                            class="inline-flex text-gray-900 px-1 pt-1 text-sm font-medium border-b-2 border-green-500 items-center"
                            aria-current="page"
                            >課程查詢</a
                        >
                        <a
                            href="#"
                            class="inline-flex text-gray-600 hover:text-gray-800 px-1 pt-1 text-sm font-medium border-transparent border-b-2 hover:border-green-200 items-center"
                            >WIP</a
                        >
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile menu -->
        <div class="sm:hidden" x-show="openMenu">
            <div class="space-y-1 px-2 pb-3 pt-2">
                <a href="#" 
                   class="block pl-3 pr-4 py-2 text-base font-medium text-emerald-700 border-l-4 border-l-emerald-700 bg-emerald-50"
                >
                    課程查詢
                </a> 
                <a href="#" 
                   class="block pl-3 pr-4 py-2 text-base font-medium text-emerald-700 hover:bg-gray-50 border-l-4 border-transparent hover:border-gray-200"
                >
                    WIP
                </a>
            </div>
        </div>
    </nav>
</header>
